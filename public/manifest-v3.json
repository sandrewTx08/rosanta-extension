{
  "manifest_version": 3,

  "name": "RoSanta - Roblox free items catalog auto-buyer",
  "description": "Extension automaticly buy the newest and favorites free items from Roblox catalog in one click.",
  "version": "0.1.0",
  "author": "sandrewtx08@pm.me",

  "icons": {
    "128": "icon.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "host_permissions": ["*://*.roblox.com/*"],

  "permissions": ["storage", "tabs", "webRequest", "notifications", "alarms"]
}
