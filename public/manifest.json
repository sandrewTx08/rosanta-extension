{
	"manifest_version": 3,

	"name": "RoSanta - Roblox free catalog autobuyer",
	"description": "Extension automatically buy the newest and favorites free items from Roblox catalog in one click.",
	"version": "0.3.0",
	"author": "sandrewtx08@pm.me",
	"homepage_url": "https://github.com/sandrewTx08/rosanta-extension",

	"icons": {
		"128": "icon.png"
	},

	"background": {
		"type": "module",
		"service_worker": "background.js"
	},

	"action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"host_permissions": ["*://*.roblox.com/*"],

	"permissions": ["storage", "notifications", "alarms"]
}
